<!DOCTYPE html>
<html>
    <head>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Quicksand:400,500,700" rel="stylesheet">
        <link href="{{ app.request.getbaseurl }}/assets/css/styles.css" rel="stylesheet" type="text/css">
        <meta charset="utf-8">
        <title>List of clients</title>
    </head>
    <body>
        <div class="container">
            <div class="well" id="stylist_well">
                <h1>Clients who see {{stylists.getStylistName}}</h1>

                {% if clients is not empty %}
                <ul>
                    {% for client in clients %}
                    <div id="well-showing-clients" class="well">
                        <li id="client-li">{{ client.getClientName }}</li>
                        <a href="/client-edit/{{client.getId}}">Edit client</a>
                    </div>
                    {% endfor %}
                </ul>
                {% endif %}
            </div>
            <h3>Add another client to this stylist</h3>

            <form class="form-group" action="/client" method="post">
                <input id="stylist_id" type="hidden" name="stylist_id" value="{{ stylists.getId() }}">
                <label for="client_name">Client Name</label>
                <input class="form-control" type="text" id="client_name" name="client_name">

                <button class="btn btn-info add" type="submit" name="button">Add client</button>
            </form>
            <li class="return"><a  href="/">Return to a list of stylists</a></li>
        </div>
    </body>
</html>
